<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" 
    crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <h1>Encurtador de URL</h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <label for="completeUrl" class="visually-hidden">URL</label>
            <input required placeholder="Url" type="url" name="completeUrl" id="completeUrl" class="col mr-2">
            <button type="submit" class="btn btn-success">Encurtar</button>
        </form>
        
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>URL Completa</th>
                <th>Url encurtada</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(shortUrl => { %>
                <tr>
                  <td><a href="<%= shortUrl.complete %>"><%= shortUrl.complete %></a></td>
                  <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                  <td><%= shortUrl.clicks %></td>
                </tr>
              <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>